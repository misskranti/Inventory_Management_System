{
  "name": "inventory-management-fifo",
  "version": "1.0.0",
  "description": "Real-time Inventory Management System with FIFO costing and Kafka integration",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "tailwindcss -i ./app/globals.css -o ./app/output.css && next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "npx tailwindcss -i ./app/globals.css -o ./app/output.css --watch",
    "kafka:producer": "node scripts/kafka-producer.js",
    "kafka:consumer": "node scripts/kafka-consumer.js",
    "db:create": "psql -U postgres -f scripts/create-database.sql",
    "db:seed": "psql -U postgres -d inventory_management -f scripts/seed-data.sql",
    "docker:setup": "bash scripts/setup-docker.sh",
    "docker:setup:win": ".\\scripts\\setup-docker.bat",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.dev.yml restart",
    "start:local": "bash start-local.sh",
    "deploy:railway": "bash deploy-railway.sh"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.294.0",
    "next": "14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "inventory",
    "fifo",
    "kafka",
    "real-time",
    "dashboard",
    "postgresql",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT"
}
